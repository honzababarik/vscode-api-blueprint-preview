{
    "name": "api-blueprint-viewer",
    "displayName": "API Blueprint Viewer",
    "description": "Preview API Blueprint compatible API documentation right there in Visual Studio Code!",
    "publisher": "develiteio",
    "author": {
        "name": "Develite",
        "url": "https://develite.io",
        "email": "hello@develite.io"
    },
    "bugs": {
        "email": "hello@develite.io"
    },
    "icon": "img/logo_dark.png",
    "license": "MIT",
    "version": "0.9.4",
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/honzababarik/vscode-api-blueprint-preview"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "api blueprint",
        "blueprint",
        "preview"
    ],
    "activationEvents": [
        "onCommand:develite.previewFile",
        "onCommand:develite.previewFileLive",
        "onCommand:develite.saveAsHtml"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [
            {
                "command": "develite.previewFile",
                "title": "API Blueprint: Preview"
            },
            {
                "command": "develite.previewFileLive",
                "title": "API Blueprint: Live Preview (Reload on file save)",
                "icon": {
                    "dark": "img/show-preview-dark.svg",
                    "light": "img/show-preview-light.svg"
                }
            },
            {
                "command": "develite.saveAsHtml",
                "title": "API Blueprint: Save as HTML"
            }
        ],
        "languages": [
            {
                "id": "apiblueprint",
                "aliases": [
                    "API Blueprint",
                    "api blueprint"
                ],
                "extensions": [
                    ".apib"
                ]
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "editorLangId == apiblueprint",
                    "command": "develite.previewFileLive",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "develite.previewFile",
                    "when": "editorLangId == apiblueprint"
                },
                {
                    "command": "develite.previewFileLive",
                    "when": "editorLangId == apiblueprint"
                },
                {
                    "command": "develite.saveAsHtml",
                    "when": "editorLangId == apiblueprint"
                }
            ]
        },
        "configuration": {
            "title": "API Blueprint Viewer",
            "properties": {
                "apiBlueprintViewer.theme.template": {
                    "type": "string",
                    "default": "default",
                    "enum": [
                        "default", 
                        "triple"
                    ],
                    "enumDescriptions": [
                        "Two-column format",
                        "Three-column format"
                    ]
                },
                "apiBlueprintViewer.theme.variables": {
                    "type": "string",
                    "default": "default",
                    "enum": [
                        "default", 
                        "streak",
                        "flatly",
                        "slate",
                        "cyborg"
                    ]
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "aglio": "^2.3.0"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
